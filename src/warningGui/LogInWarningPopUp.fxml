<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="200.0"
            prefWidth="350.0"
            stylesheets="/sample.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerWarning">
    <center>
        <VBox alignment="CENTER"
              prefHeight="200.0"
              prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Your user name or password is incorrect. Try again or please create new user"
                       textAlignment="JUSTIFY"
                       wrapText="true"/>
                <HBox alignment="CENTER"
                      prefHeight="100.0"
                      prefWidth="200.0">
                    <children>
                        <Button fx:id="tryAgainButton"
                                mnemonicParsing="false"
                                onAction="#handleButtonActionTryAgain"
                                text="Try again">
                            <HBox.margin>
                                <Insets bottom="20.0"
                                        left="20.0"
                                        right="5.0"
                                        top="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"
                                left="10.0"
                                right="10.0"
                                top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Hello, "/>
                <Region prefHeight="17.0"
                        prefWidth="5.0"/>
                <Label/>
            </children>
        </HBox>
    </top>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Created by DaBase"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
